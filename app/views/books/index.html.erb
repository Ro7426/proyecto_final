<p id="notice"><%= notice %></p>

<h1>Books</h1>

<div class="container">

<div class="row">

<% @books.each do |book| %>



<div class="col-lg-3 col-sx-12">

<div class="card-img-top img-fluid" style="width: 20rem;">
  <img src="<%= book.photo %>" class="card-img-top img-fluid" alt="..." style="width:50%">
  <div class="card-body">
    <th>Title</th>
    <h6 class="card-title"><%= book.title %></h6>
    <th>Author</th>
    <h6 class="card-title"><%= book.author %></h6>
    


    <!-- <p class="card-text"><%# book.description %></p> -->
    
      <tr>
        <td></td>
        
        <td></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    
  </div>
</div>


</div>
 

<% end %>


</div>

</div>





