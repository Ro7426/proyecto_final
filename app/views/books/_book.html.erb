


<div class="col-lg-3 col-sx-12">

  <div class="card-img-top img-fluid" style="width: 20rem;">
    <%= image_tag(book.photo, class: "card-img-top img-fluid", alt:"...", style:"width:50%") if book.photo.attached? %>
    <div class="card-body">
      <%= button_to "Me interesa", action: "new" %>
      <th>Due√±o del Libro</th>
      <h6 class="card-title"><%= book.user.try(:name) %></h6>
      <th>Titulo</th>
      <h6 class="card-title"><%=book.title %></h6>
      <th>Autor</th>
      <h6 class="card-title"><%= book.author %></h6>
      <tr>
        <td></td>
        <td></td>
        <td><%= link_to 'Show', book %></td>
         
         <% if current_user.id == book.user.id %>

          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>  
    </div>
  </div>
</div>
 